{
    "manifest_version": 2,
    "name": "Selection Shield",
    "description": "Stops websites from triggering popups & other unwanted interactions when you select text",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["index.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "payload.js"
    ]
}
